{
  "name": "@iota/identity-wasm",
  "version": "0.3.1",
  "license": "Apache-2.0",
  "homepage": "https://www.iota.org",
  "description": "WASM bindings for IOTA Identity - A Self Sovereign Identity Framework implementing the DID and VC standards from W3C. To be used in Javascript/Typescript",
  "contributors": [
    "Jelle Millenaar <jelle.millenaar@iota.org>",
    "Devin Turner <devin.turner@iota.org>",
    "Tensor <tensordeveloper@gmail.com>",
    "Thoralf MÃ¼ller <thoralf.mue@gmail.com>",
    "Sebastian Heusser <huhn.dev@gmail.com>"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/iotaledger/identity.rs.git",
    "directory": "bindings/wasm"
  },
  "bugs": {
    "url": "https://github.com/iotaledger/identity.rs/issues"
  },
  "publishConfig": {
    "access": "public"
  },
  "directories": {
    "doc": "docs",
    "example": "examples"
  },
  "files": [
    "pkg/bundler/identity_wasm_bg.wasm",
    "pkg/bundler/identity_wasm.js",
    "pkg/bundler/identity_wasm.d.ts",
    "pkg/node/identity_wasm_bg.wasm",
    "pkg/node/identity_wasm.js",
    "pkg/node/identity_wasm_bg.js",
    "pkg/node/identity_wasm.d.ts"
  ],
  "main": "pkg/node/identity_wasm.js",
  "module": "pkg/bundler/identity_wasm.js",
  "types": "pkg/bundler/identity_wasm.d.ts",
  "sideEffects": "false",
  "scripts": {
    "build:bundler": "wasm-pack build --target bundler --out-dir pkg/bundler",
    "build:nodejs": "wasm-pack build --target nodejs --out-dir pkg/node && node ./build/node",
    "build:docs": "node ./build/docs",
    "build": "npm run build:nodejs && npm run build:bundler && npm run build:docs",
    "pretest": "npm run build:nodejs",
    "prepublishOnly": "npm run build",
    "example:serve": "webpack serve",
    "example:node": "node examples/node.js"
  },
  "devDependencies": {
    "@wasm-tool/wasm-pack-plugin": "1.0.1",
    "@webpack-cli/serve": "^0.1.2",
    "copy-webpack-plugin": "^4.6.0",
    "jsdoc-to-markdown": "^7.0.0",
    "wasm-pack": "^0.9.1",
    "webpack": "^4.29.4",
    "webpack-cli": "^3.1.1",
    "webpack-dev-server": "^3.1.0"
  },
  "dependencies": {
    "node-fetch": "^2.6.0"
  }
}
